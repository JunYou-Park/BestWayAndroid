<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_tbot_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/nanumsquare_r"
        android:gravity="center"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="3sp"
        android:text="This is title. This is title. This is title. This is title. This is title. This is title. This is title. This is title. This is title. This is title. This is title. This is title. This is title. This is title. This is title."
        android:textColor="@color/black_2a"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tbot_title">

        <Button
            android:id="@+id/btn_tbot_1"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@color/gray"
            android:fontFamily="@font/nanumsquare_eb"
            android:text="버튼1"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_tbot_2"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginStart="3dp"
            android:layout_weight="1"
            android:background="@color/black_2a"
            android:fontFamily="@font/nanumsquare_eb"
            android:text="버튼2"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>